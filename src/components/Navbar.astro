---
import { Image } from 'astro:assets';
import "../styles/main.css";
import brandLogo from "../assets/images/brandLogo.png";

import { allCompanyInformation } from "../lib/seoContent"
import PrimaryButton from './Buttons/PrimaryButton.astro';

const seoContent = await allCompanyInformation();
---
<div data-animation="default" data-collapse="medium" data-duration="400" data-easing="ease"
                data-easing2="ease" role="banner" class="nav-bar w-nav">
                <div class="large-container w-container">
                    <div class="nav-wrap"><a href="/" aria-current="page"
                            class="brand-link w-nav-brand w--current"><Image inferSize style="height: 80px; width: auto;"
                                src={seoContent[0].companyLogo}
                                loading="lazy" alt="Brand Logo" /></a>
                        <nav role="navigation" class="nav-menu w-nav-menu">
                            <div class="nav-menu-list-wrap"><a href="/" aria-current="page"
                                    class="nav-menu-link w-nav-link w--current">Home</a><a href="about-us"
                                    class="nav-menu-link w-nav-link">About</a><a href="services"
                                    class="nav-menu-link w-nav-link">Services</a>
                                <a href="/blog" class="nav-menu-link w-nav-link">Blog</a>
                            </div>
                            <PrimaryButton text="Contact Us" href="/contact" />
                        </nav>
                        <div class="menu-button w-nav-button">
                            <div class="w-icon-nav-menu"></div>
                        </div>
                    </div>
                </div>
            </div>